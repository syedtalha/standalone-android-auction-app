<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.talhasyed.bidit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- User Provider  Start -->
        <provider
            android:name=".storage.UserProvider"
            android:authorities="com.talhasyed.bidit.provider.UserProvider"
            android:enabled="true" />
        <!-- User Provider  End -->


        <!-- Bid Provider  Start -->
        <provider
            android:name=".storage.BidProvider"
            android:authorities="com.talhasyed.bidit.provider.BidProvider"
            android:enabled="true" />
        <!-- Bid Provider  End -->


        <!-- Listing Provider  Start -->
        <provider
            android:name=".storage.ListingProvider"
            android:authorities="com.talhasyed.bidit.provider.ListingProvider"
            android:enabled="true" />
        <!-- Listing Provider  End -->
        <activity
            android:name=".controller.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true" />
        <activity
            android:name=".controller.SignUpActivity"
            android:label="@string/action_sign_up"
            android:noHistory="true" />
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".controller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity" />
        </activity>
        <activity
            android:name=".controller.ListingDetailActivity"
            android:parentActivityName=".controller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity" />
        </activity>

        <service
            android:name=".service.AutoBotService"
            android:enabled="true"
            android:exported="false"></service>

    </application>

</manifest>